<p id="notice"><%= notice %></p>

<h1>Checkins</h1>

<table>
  <thead>
    <tr>
      <th>Checkindate</th>
      <th>Room</th>
      <th>Customer</th>
      <th>Amount to be paid</th>
      <%if @checkins.present?%>
        <th colspan="3"></th>
      <%end%>
    </tr>
  </thead>

  <tbody>
    <% @checkins.each do |checkin| %>
      <tr>
        <td><%= checkin.checkindate %></td>
        <td><%= checkin.room_id %></td>
        <td><%= checkin.customer_id %></td>
        <td><%= checkin.amount_to_be_paid %></td>
        <td><%= link_to '<button type="button" class="btn btn-default">Update</button>'.html_safe, edit_checkin_path(checkin) %></td>
        <td><%= link_to '<button type="button" class="btn btn-default">Destroy</button>'.html_safe, checkin, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-default">New Checkin</button>'.html_safe, new_checkin_path %>

